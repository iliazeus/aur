# Maintainer: Ilia Pozdnyakov <ilia.pozdnyakov@ya.ru>
pkgname="trurl-git"
pkgver=r80.5ed5181
pkgrel=1
pkgdesc="command line tool for URL parsing and manipulation"
arch=("any")
url="https://github.com/curl/urler"
license=("MIT")
depends=("curl")
makedepends=("gcc" "make")
conflicts=()
source=("$pkgname"::"git+https://github.com/curl/urler")
md5sums=("SKIP")

pkgver() {
  cd "$srcdir/$pkgname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir/$pkgname"
  make
}

package() {
  cd "$srcdir/$pkgname"
  install -Dm0755 "trurl" "$pkgdir/usr/bin/trurl"
}
