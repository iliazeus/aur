# Maintainer: Ilia Pozdnyakov <ilia.pozdnyakov@ya.ru>
pkgname="python-pex-binance"
pkgver="1.0.16"
pkgrel="1"
pkgdesc="An unofficial Python wrapper for the Binance exchange REST API"
arch=("any")
url="https://github.com/sammchardy/python-binance"
license=("MIT")
depends=("python")
makedepends=("python-pex")
conflicts=("python-binance" "python-binance-git")

build() {
  mkdir -p "$pkgname-$pkgver"
  cd "$pkgname-$pkgver"
  pex \
    --python-shebang "/usr/bin/python" \
    --sh-boot \
    --compile \
    "python-binance==$pkgver" \
    --output-file "$pkgname.pex"
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm a+rx "$pkgname.pex" "$pkgdir/usr/bin/$pkgname"
}
