pkgname="fb2converter"
pkgver="1.69.2"
pkgrel="1"
pkgdesc="Unified converter of FB2 files into epub2, kepub, mobi and azw3 formats."
arch=("x86_64")
url="https://github.com/rupor-github/fb2converter"
license=("GPL-3.0-only")
depends=()
makedepends=()
conflicts=("kindlegen")
source=("$pkgname-$pkgver.zip"::"https://github.com/rupor-github/fb2converter/releases/download/v$pkgver/fb2c_linux_amd64.zip")
md5sums=("0d7625bba87814cf062157430b94a5f3")

package() {
  install -Dm0755 "fb2c" "$pkgdir/usr/bin/fb2c"
  install -Dm0755 "kindlegen" "$pkgdir/usr/bin/kindlegen"
}
